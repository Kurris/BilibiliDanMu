{
  "name": "livedanmu",
  "productName": "Livedanmu",
  "author": {
    "name": "liguoyang",
    "email": "ligy.97@foxmail.com"
  },
  "version": "0.0.1",
  "private": true,
  "main": "dist-electron/background.js",
  "description": "live stream tool",
  "scripts": {
    "dev": "vite",
    "build": "rimraf dist && vite build && electron-builder",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "build": {
    "appId": "Livedanmu.app",
    "productName": "Livedanmu",
    "asar": true,
    "copyright": "Copyright Â© 2023 Livedanmu",
    "directories": {
      "output": "release/${version}"
    },
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://127.0.0.1:8080"
      }
    ],
    "releaseInfo": {
      "releaseNotes": "beta"
    },
    "extraResources": [
      "danmu-exe/**"
    ]
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "@microsoft/signalr": "^7.0.7",
    "@vueuse/core": "^10.1.2",
    "codemirror": "^5.65.13",
    "codemirror-editor-vue3": "^2.3.0",
    "element-plus": "^2.3.6",
    "node-sass": "^9.0.0",
    "pinia": "^2.0.36",
    "sass": "^1.62.1",
    "sass-loader": "^13.3.1",
    "vue": "^3.3.2",
    "vue-router": "^4.2.0",
    "vue3-draggable-resizable": "^1.6.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@tsconfig/node18": "^2.0.1",
    "@types/codemirror": "^5.60.8",
    "@types/node": "^18.16.8",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "^0.4.0",
    "electron": "^25.0.1",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.39.0",
    "eslint-plugin-vue": "^9.11.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "typescript": "~5.0.4",
    "vite": "^4.3.5",
    "vite-plugin-electron": "^0.11.2",
    "vue-tsc": "^1.6.4"
  }
}
